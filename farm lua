-- 【安全・超軽量】自動クリック（Auto Click）スクリプト
local player = game.Players.LocalPlayer
local mouse = player:GetMouse()

_G.AutoFarm = true -- ここを false にすると止まります

spawn(function()
    while _G.AutoFarm do
        wait(0.1) -- 0.1秒ごとにクリック（ラグ防止）
        -- 装備している武器（剣や実の能力）で攻撃する
        local tool = player.Character:FindFirstChildOfClass("Tool")
        if tool then
            tool:Activate()
        end
    end
end)

print("オートクリック起動完了。武器を持って敵に近づいてください！")
